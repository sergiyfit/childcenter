mixin printHeader(hasHero, whiteBackground)
    - let whitebcg = "white"
    if !whiteBackground
        - whitebcg = "milk-background"
        if hasHero
            - whitebcg = "milk-background correct-mb"    
    header(class=whitebcg).header
        .header__menu__moving-part 
            .header__menu.flex
                .header__menu__logo
                    a(href="index.html") 
                        img(src="img/header/Logo.svg", alt="Laboratory_malenkih_vihakhidnikiv_Khmalnytskiy")
                    .burger
                        span
                nav.header__menu__container 
                    ul.header__menu__elements.flex
                        for item in menu
                            li.header__menu__item__holder
                                if item.submenu
                                    ul.header__menu__subitem__elements
                                        for subitem in item.submenu
                                            li.header__menu__subitem__holder
                                                a(href=subitem.url).header__menu__subitem__link #{subitem.name}  

                                a(href=item.url).header__menu__item #{item.name}  

                a.global__btn.header__menu__btn(href=defaultUrlContact).popupRegister Записати дитину
        if hasHero    
            .header__hero.milk-background
                .header__hero-strip-container
                    img(src="img/header/srtichka.svg", alt="strichka").header__hero-strip
                    img(src="img/header/srtichka.svg", alt="strichka").header__hero-strip.overstrip
                h1.global__huge_text.header__hero_header Ваша дитина починає розвиватись тут
                p.header__hero__text Від немовля до дошкільнятки, більше 9 років співпраці з батьками і дітьми!
                a.header__hero__btn(href=defaultUrlContact).popupRegister Записати дитину
                .header__hero_img_container.flex
                    for item in headImage
                        .header__hero_img(class=item.vizerunok)
                            img(src=item.url alt=item.alt)
